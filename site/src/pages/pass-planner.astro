---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pass Planner - TLE Fetcher">
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-4xl font-bold">Satellite Pass Planner</h1>
    </div>

    <!-- Banner -->
    <div id="banner" class="alert alert-info shadow-lg">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <h3 class="font-bold">Static Build</h3>
        <div class="text-sm">This is a fully static Next.js application. No server required!</div>
      </div>
      <button class="btn btn-sm btn-ghost" onclick="document.getElementById('banner').style.display='none'" aria-label="Dismiss banner">
        âœ•
      </button>
    </div>

    <!-- Dashboard Container -->
    <div id="dashboard-container" class="w-full">
      <div id="loading" class="text-center py-20">
        <div class="loading loading-spinner loading-lg"></div>
        <p class="mt-4">Loading Pass Planner...</p>
      </div>
      
      <div id="error" class="hidden">
        <div class="alert alert-warning shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <h3 class="font-bold">Pass Planner Not Available</h3>
            <div class="text-sm">The static Next.js dashboard has not been built yet.</div>
          </div>
        </div>
        <div class="card bg-base-200 shadow-lg mt-6">
          <div class="card-body">
            <h2 class="card-title">How to Build the Dashboard</h2>
            <p>The Pass Planner is generated during the CI/CD process. To build it locally:</p>
            <div class="mockup-code mt-4">
              <pre><code>cd web</code></pre>
              <pre><code>npm ci</code></pre>
              <pre><code>npm run build</code></pre>
              <pre><code>cp -r out/* ../site/public/dashboard/</code></pre>
            </div>
            <div class="card-actions justify-end mt-4">
              <a href="https://github.com/cywf/tle-fetcher/tree/main/web" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
                View Source Code
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <iframe
        id="dashboard-frame"
        class="hidden w-full border-0 rounded-lg shadow-lg"
        style="min-height: 100vh;"
        title="Satellite Pass Planner Dashboard"
      ></iframe>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const basePath = import.meta.env.BASE_URL;
      const dashboardUrl = `${basePath}/dashboard/index.html`;
      const iframe = document.getElementById('dashboard-frame') as HTMLIFrameElement;
      const loading = document.getElementById('loading');
      const error = document.getElementById('error');

      // Try to load the dashboard
      fetch(dashboardUrl, { method: 'HEAD' })
        .then(response => {
          if (response.ok) {
            // Dashboard exists, load it
            iframe.src = dashboardUrl;
            iframe.onload = () => {
              loading?.classList.add('hidden');
              iframe.classList.remove('hidden');
            };
          } else {
            // Dashboard doesn't exist
            loading?.classList.add('hidden');
            error?.classList.remove('hidden');
          }
        })
        .catch(() => {
          // Error checking for dashboard
          loading?.classList.add('hidden');
          error?.classList.remove('hidden');
        });
    });
  </script>
</Layout>
