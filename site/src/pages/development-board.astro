---
import Layout from '../layouts/Layout.astro';
import DevBoard from '../components/DevelopmentBoard';
---

<Layout title="Development Board - TLE Fetcher">
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h1 class="text-4xl font-bold">Development Board</h1>
      <a
        href="https://github.com/cywf/tle-fetcher/issues"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary"
      >
        View on GitHub
      </a>
    </div>

    <div class="alert alert-info shadow-lg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="stroke-current shrink-0 w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <div>
        <div class="text-sm">
          This is a read-only view of the project board. Items are grouped by status labels.
        </div>
      </div>
    </div>
    
    <DevBoard client:load />
  </div>
</Layout>
