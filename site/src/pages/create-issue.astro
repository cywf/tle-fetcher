---
import Layout from '../layouts/Layout.astro';

const issueTypes = [
  {
    title: 'üêõ Bug Report',
    description: 'Report a bug or unexpected behavior',
    href: 'https://github.com/cywf/tle-fetcher/issues/new?labels=bug&template=bug_report.md',
    color: 'bg-error/10 hover:bg-error/20 border-error',
  },
  {
    title: '‚ú® Feature Request',
    description: 'Suggest a new feature or enhancement',
    href: 'https://github.com/cywf/tle-fetcher/issues/new?labels=enhancement&template=feature_request.md',
    color: 'bg-primary/10 hover:bg-primary/20 border-primary',
  },
  {
    title: 'üìö Documentation',
    description: 'Improve or update documentation',
    href: 'https://github.com/cywf/tle-fetcher/issues/new?labels=documentation&template=documentation.md',
    color: 'bg-info/10 hover:bg-info/20 border-info',
  },
  {
    title: '‚ùì Question',
    description: 'Ask a question or seek help',
    href: 'https://github.com/cywf/tle-fetcher/issues/new?labels=question&template=question.md',
    color: 'bg-warning/10 hover:bg-warning/20 border-warning',
  },
];
---

<Layout title="Create Issue - TLE Fetcher">
  <div class="max-w-4xl mx-auto space-y-6">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Create an Issue</h1>
      <p class="text-lg opacity-80">
        Choose a template to get started with your issue submission
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {issueTypes.map((type) => (
        <a
          href={type.href}
          target="_blank"
          rel="noopener noreferrer"
          class={`card ${type.color} border-2 transition-all shadow-lg hover:shadow-xl`}
        >
          <div class="card-body">
            <h2 class="card-title text-2xl mb-2">{type.title}</h2>
            <p class="opacity-80">{type.description}</p>
            <div class="card-actions justify-end mt-4">
              <button class="btn btn-sm btn-ghost">
                Create ‚Üí
              </button>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="divider">OR</div>

    <div class="card bg-base-200 shadow-lg">
      <div class="card-body">
        <h2 class="card-title">Choose Your Own Template</h2>
        <p class="opacity-80 mb-4">
          If none of the above templates fit your needs, you can choose from all available templates on GitHub.
        </p>
        <div class="card-actions">
          <a
            href="https://github.com/cywf/tle-fetcher/issues/new/choose"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            Browse All Templates
          </a>
        </div>
      </div>
    </div>

    <div class="alert alert-info shadow-lg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="stroke-current shrink-0 w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <div>
        <h3 class="font-bold">Before Creating an Issue</h3>
        <div class="text-sm">
          Please search existing issues to avoid duplicates. Check both open and closed issues.
        </div>
      </div>
    </div>
  </div>
</Layout>
