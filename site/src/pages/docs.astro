---
import Layout from '../layouts/Layout.astro';

const docs = [
  {
    title: 'README',
    description: 'Main project documentation and getting started guide',
    path: '/README.md',
    githubUrl: 'https://github.com/cywf/tle-fetcher/blob/main/README.md',
  },
  {
    title: 'Contributing Guide',
    description: 'Learn how to contribute to the project',
    path: '/docs/CONTRIBUTING.md',
    githubUrl: 'https://github.com/cywf/tle-fetcher/blob/main/docs/CONTRIBUTING.md',
  },
  {
    title: 'Security Policy',
    description: 'Security policies and vulnerability reporting',
    path: '/docs/SECURITY.md',
    githubUrl: 'https://github.com/cywf/tle-fetcher/blob/main/docs/SECURITY.md',
  },
  {
    title: 'Architecture',
    description: 'System architecture and design decisions',
    path: '/docs/ARCHITECTURE.md',
    githubUrl: 'https://github.com/cywf/tle-fetcher/blob/main/docs/ARCHITECTURE.md',
  },
];
---

<Layout title="Documentation - TLE Fetcher">
  <div class="space-y-6">
    <h1 class="text-4xl font-bold mb-6">Documentation</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {docs.map((doc) => (
        <div class="card bg-base-200 shadow-lg hover:shadow-xl transition-shadow">
          <div class="card-body">
            <h2 class="card-title text-xl">{doc.title}</h2>
            <p class="opacity-80 mb-4">{doc.description}</p>
            <div class="card-actions justify-end">
              <a
                href={doc.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-primary btn-sm"
              >
                Open in GitHub ‚Üí
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="divider"></div>

    <div class="card bg-base-200 shadow-lg">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Quick Links</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <a
            href="https://github.com/cywf/tle-fetcher/tree/main/docs"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-outline"
          >
            üìÅ Browse All Docs
          </a>
          <a
            href="https://github.com/cywf/tle-fetcher/wiki"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-outline"
          >
            üìñ Wiki
          </a>
          <a
            href="https://github.com/cywf/tle-fetcher/discussions"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-outline"
          >
            üí¨ Discussions
          </a>
          <a
            href="https://github.com/cywf/tle-fetcher/issues"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-outline"
          >
            üêõ Issues
          </a>
        </div>
      </div>
    </div>

    <div class="alert alert-info shadow-lg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="stroke-current shrink-0 w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <div>
        <h3 class="font-bold">Full Documentation Rendering Coming Soon</h3>
        <div class="text-sm">
          In a future update, documentation will be rendered directly on this page with syntax highlighting and a table of contents. For now, click the links above to view the docs on GitHub.
        </div>
      </div>
    </div>
  </div>
</Layout>
